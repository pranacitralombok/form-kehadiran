    <script>
      async function simpanData() {
        const statusEl = document.getElementById("status");
        const data = {
          nama: document.getElementById('nama').value,
          jabatan: document.getElementById('jabatan').value,
          tanggal: document.getElementById('tanggal').value,
          jamDatang: document.getElementById('jamDatang').value,
          jamPulang: document.getElementById('jamPulang').value,
          statusKehadiran: document.getElementById('statusKehadiran').value,
          keterangan: document.getElementById('keterangan').value
        };

        if (!data.nama || !data.tanggal || !data.statusKehadiran) {
          statusEl.innerHTML = "‚ö†Ô∏è Harap isi semua kolom wajib!";
          statusEl.style.color = "red";
          return;
        }

        statusEl.innerHTML = "‚è≥ Menyimpan data...";
        statusEl.style.color = "black";

        try {
          const response = await fetch("https://script.google.com/macros/s/AKfycbzQYYK0J40ew9TJkRXTuqLUzInbqCMYF2-mPW5D8RXL3ZHZ4E8uhSxZDyHnS5r4R-he/exec", {
            method: "POST",
            mode: "no-cors",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
          });

          statusEl.innerHTML = "‚úÖ Data berhasil disimpan!";
          statusEl.style.color = "green";
          document.querySelectorAll("input, select, textarea").forEach(el => el.value = "");

        } catch (error) {
          console.error(error);
          statusEl.innerHTML = "‚ùå Gagal menyimpan data.";
          statusEl.style.color = "red";
        }
      }
    </script>
